%%%%% Add custom layout/wrapper class to element %%%%%

#1910 = layout
#365 = wrapper
#395 = aligning
#375 = margin-top
#385 = margin-bottom

#Add this lines to "fileadmin/templates/Configuration/TypoScript/lib.fluidContent.setupts" 

tt_content {
    imageTextLink {
        dataProcessing {
            1910 {
                classMappings {
                    1001 = colored-background _color-1
                    1002 = colored-background _color-2
                    1003 = colored-background _color-3
                }
            }
        }
    }
}

#Add this lines to "fileadmin/templates/Configuration/PageTS/FluidContent.pagets" 

TCEFORM.tt_content.layout {
    types {
        imageTextLink {
            addItems {
                --div-- = ImageTextLink layouts:
                1001 = Colored background. Color-1
                1002 = Colored background. Color-2
                1003 = Colored background. Color-3
            }
        }
    }
}





